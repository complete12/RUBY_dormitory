<!-- Begin Body -->
<div class="container">
	<div class="row">
              <div class="panel">
<hr>
<table class="type09">
      <thead>
  <tr align = center><th colspan = 8 scope="cols"><center><font size = "5">내정보</font></center></th></tr>
  </thead>
    <tr>
        <th><center>호실</center></th>
        <td><center><%= current_domitory.room_number %></center></td>
        <th><center>학과</center></th>
        <td><center><%= current_domitory.major %></center></td>
        <th><center>학번</center></th>
        <td><center><%= current_domitory.student_number %></center></td>
        <th><center>성명</center></th>
        <td><center><%= current_domitory.name %></center></td>
    </tr>
</table>
<br>
<div align="right">
    <a href="/domitories/edit">내 정보 수정하러 가기</a>
</div>
<br><br><br><br><br>
<table class="type09" align=center >
          <thead>
  <tr align = center><th colspan = 2 scope="cols"><center><font size = "5">커뮤니티룸 신청 결과</font></center></th></tr>
  </thead>
    <tr>
        <th><center>커뮤니티룸 신청 날짜</center></th>
        <th><center>처리 결과</center></th>
    </tr>
 
     <% @CroomUser.each do |x| %>
        <% if x.student_number==current_domitory.student_number %>
            <tr>
                <td><center><%= x.apply_date%></center></td>
                <% if x.apply == 2 %>
                    <td><center>승인완료</center></td>
                <% elsif x.apply == 1 %>
                    <td><center>승인대기</center></td>
                <% end %>
            </tr>
        <%end%>
      <%end%>
</table>
<br><br><br><br><br>
<table class="type09" align=center>
          <thead>
  <tr align = center><th colspan = 3 scope="cols"><center><font size = "5">외박신청 결과</font></center><div align=right>남은 외박 신청 일 수: <%= current_domitory.sleepout_rest%>일</div></th></tr>
  </thead>
    <tr>
        <th><center>외박시작일자</center></th>
        <th><center>외박종료일자</center></th>
        <th><center>외박신청결과</center></th>
    </tr>
 
     <% @SleepUser.each do |x| %>
        <% if x.student_number==current_domitory.student_number %>
            <tr>
                <td><center><%= x.apply_start_date%></center></td>
                <td><center><%= x.apply_end_date%></center></td>
                <% if x.apply == 2 %>
                    <td><center>승인완료</center></td>
                <% elsif x.apply == 1 %>
                    <td><center>승인대기</center></td>
                <% end %>
            </tr>
        <%end%>
      <%end%>
</table>
<br><br><br><br><br><br>
</div>
</div>
</div>


